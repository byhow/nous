{
  "name": "nous",
  "version": "0.0.1",
  "description": "A universal package manager and api builder.",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "echo placeholder test",
    "ns": "ts-node src/index.ts",
    "prepublishOnly": "pnpm test && pnpm start",
    "format": "prettier --write \"src/**/*.ts\"",
    "create": "pnpm build && pnpm test",
    "build": "tsc -p .",
    "lint": "eslint 'src/**/*.{js,ts,tsx}' --quiet --fix",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "refresh": "rm -rf ./node_modules ./package-lock.json && pnpm i"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/byhow/nous.git"
  },
  "author": "byhow",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/byhow/nous/issues"
  },
  "homepage": "https://github.com/byhow/nous#readme",
  "dependencies": {
    "chalk": "^5.0.0",
    "chalk-animation": "^1.6.0",
    "commander": "^8.3.0",
    "figlet": "^1.5.2",
    "fs-extra": "^10.0.0",
    "gradient-string": "^2.0.0",
    "inquirer": "^8.2.0",
    "inversify": "^6.0.1",
    "kleur": "^4.1.4",
    "minimist": "^1.2.5",
    "nanospinner": "^1.0.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.55",
    "@swc/core": "^1.2.135",
    "@types/chalk-animation": "^1.6.1",
    "@types/figlet": "^1.5.4",
    "@types/gradient-string": "^1.1.2",
    "@types/inquirer": "^8.2.0",
    "@types/node": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
