{
  "name": "nous",
  "version": "0.0.1",
  "description": "A universal package manager and api builder.",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "echo placeholder test",
    "ns": "ts-node src/index.ts",
    "prepublishOnly": "yarn test",
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "tsc -p .",
    "lint": "eslint 'src/**/*.{js,ts,tsx}' --quiet --fix",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/byhow/nous.git"
  },
  "author": "byhow",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/byhow/nous/issues"
  },
  "homepage": "https://github.com/byhow/nous#readme",
  "dependencies": {
    "chalk": "^5.3.0",
    "chalk-animation": "^2.0.3",
    "commander": "^12.0.0",
    "figlet": "^1.7.0",
    "fs-extra": "^11.2.0",
    "gradient-string": "^2.0.2",
    "inquirer": "^9.2.14",
    "kleur": "^4.1.5",
    "nanospinner": "^1.1.0"
  },
  "devDependencies": {
    "@types/chalk-animation": "^1.6.3",
    "@types/figlet": "^1.5.8",
    "@types/gradient-string": "^1.1.5",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^9.0.0",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "packageManager": "^pnpm@8.6.12"
}
