{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "useDefineForClassFields": true,
    "module": "esnext",
    "incremental": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "skipDefaultLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
